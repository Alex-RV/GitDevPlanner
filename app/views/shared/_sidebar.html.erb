<aside class="flex flex-col bg-green-900 text-white py-4 px-6 h-screen fixed top-0 left-0">
  <h3 class="text-2xl font-semibold mb-4">Sidebar Content</h3>
  <ul class="space-y-4">
    <li>
      <a href="#" class="block hover:text-green-500 text-lg">Dashboard</a>
    </li>
    <li>
      <a href="#" class="block hover:text-green-500 text-lg">Repositories</a>
    </li>
    <li>
      <a href="#" class="block hover:text-green-500 text-lg">Collaborators</a>
    </li>
    <% if user_signed_in? %>
      <li>
        <span class="block mb-2 text-lg">Welcome <%= current_user.nickname %>!</span>
        <%= button_to 'Log out', logout_path, method: :delete, class: "bg-red-500 hover:bg-red-600 px-4 py-2 rounded" %>
      </li>
    <% else %>
      <li>
        <%= button_to 'Sign in with GitHub', '/auth/github', data: { turbo: false }, class: "bg-blue-500 hover:bg-blue-600 px-4 py-2 rounded" %>
      </li>
    <% end %>
  </ul>
</aside>
